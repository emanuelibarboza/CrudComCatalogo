@model List<ASPNETMVCCRUD.Models.Domain.Employee>
@{
	ViewData["Title"] = "Cadastros";
}

<h1>Cadastros</h1>

<table class="table">
	<thead>
		<tr>
			<th>ID</th>
			<th>Nome</th>
			<th>Email</th>
			<th>Gastos</th>
			<th>Data de Visita</th>
			<th>Lugar Visitado</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var employee in Model)
		{
			<tr>
				<td>@employee.Id</td>
				<td>@employee.Name</td>
				<td>@employee.Email</td>
				<td>@employee.Salary</td>
				<td>@employee.DateOfBirth.ToString("dd-MM-yyyy")</td>
				<td>@employee.Department</td>
				<td><a href="Employees/View/@employee.Id">Ver</a></td>
			</tr>
		}
	</tbody>
</table>					